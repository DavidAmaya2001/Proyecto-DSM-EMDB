<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/primary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:backgroundTint="@color/secondary"
                android:clickable="true"
                android:tint="#B11111"
                app:borderWidth="0dp"
                app:fabSize="normal"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="158dp"
                android:layout_height="74dp"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="180dp"
                app:srcCompat="@drawable/logosb" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="sans-serif-medium"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/mailRegisterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="14dp"
            />
        <EditText
            android:id="@+id/nameRegisterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="First Name"
            android:inputType="textEmailAddress"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="14dp"
            />
        <EditText
            android:id="@+id/secNameRegisterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Second Name"
            android:inputType="textEmailAddress"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="14dp"
            />

        <EditText
            android:id="@+id/pswdRegisterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="14dp"
            />

        <EditText
            android:id="@+id/pswdComRegisterTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="14dp"
            />
        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/buttonColor"
            android:paddingVertical="12dp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/loginTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>