<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Peliculas">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="185dp">

        <ImageView
            android:id="@+id/headerMovies"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/background_header_description"
            android:scaleType="fitXY"
            android:src="@mipmap/background_emdb"
            android:visibility="visible" />

        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/buttonColor"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="@string/header_movies"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:contentDescription="@string/movies_title"
                    android:src="@mipmap/mario"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/series_title"
                    android:src="@mipmap/guardians" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:contentDescription="@string/movies_title"
                    android:src="@mipmap/antman"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/series_title"
                    android:src="@mipmap/ff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:contentDescription="@string/movies_title"
                    android:src="@mipmap/spiderman"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/series_title"
                    android:src="@mipmap/scream" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>