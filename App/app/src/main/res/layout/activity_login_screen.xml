<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/loginLogo"
            android:layout_width="171dp"
            android:layout_height="88dp"
            app:srcCompat="@drawable/logosb"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="35dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="sans-serif-medium"
            android:text="Login to Your Account"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:id="@+id/mailLoginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="14dp"
            />

        <EditText
            android:id="@+id/pswdLoginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_txt"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingTop="18dp"
            android:paddingEnd="5dp"
            android:paddingStart="14dp"
            android:paddingBottom="18dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/primaryGray"
            android:textSize="14sp"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="14dp"
            />

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="25dp"
            android:backgroundTint="@color/buttonColor"
            android:paddingVertical="12dp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/pswdForgotBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Forgot the password?"
            android:textAlignment="center"
            android:textColor="@color/buttonColor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/continueTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or continue with"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            />

        <LinearLayout
            android:id="@+id/socialButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            >

            <Button
                android:id="@+id/facebookBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/secondary"
                />

            <Button
                android:id="@+id/googleBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/secondary"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/registerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="16sp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>